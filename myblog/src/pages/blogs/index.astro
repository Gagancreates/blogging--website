---
import Layout from '../../layouts/Layout.astro';

const categories = [
  {
    title: 'Machine Learning',
    description: 'Deep dives into ML concepts, implementations, and applications',
    url: '/blogs/ml',
    blogs: [
      {
        title: 'Gradient Descent: From Zero to Hero',
        excerpt: 'Understanding Gradient Descent from Basics along with Mathematical Formulas and Visualisation',
        date: '2024-02-25',
        externalLink: 'https://sheer-castanet-7f7.notion.site/Gradient-Descent-Zero-to-Hero-1ba71143c5dc806486ebdc0f936c7c93'
      },
      {
        title: 'Implementing a Recommendation System',
        excerpt: 'Building a collaborative filtering model from scratch',
        date: '2024-03-18',
        externalLink: 'https://example.com/recommendation-system'
      },
      {
        title: 'Natural Language Processing with Transformers',
        excerpt: 'Exploring state-of-the-art NLP techniques and model architectures',
        date: '2024-03-12',
        externalLink: 'https://example.com/nlp-transformers'
      },
      {
        title: 'More blogs incoming....',
      
        date: '2025-02-27',
        
      }
    ]
  },
  {
    title: 'Build with Me',
    description: 'Follow along as I build and document interesting projects',
    url: '/blogs/build',
    blogs: [
      {
        title: 'Building a Personal Portfolio Website',
        excerpt: 'A step-by-step guide to creating a responsive portfolio using Astro and Tailwind CSS',
        date: '2025-01-29',
        externalLink: 'gagan-blogs.netlify.app'
      },
      {
        title: 'More blogs incoming....',
      
        date: '2025-02-27',
        
      }
     
    ]
  }
];
---

<Layout title="Blogs | gagan">
  <main class="container mx-auto px-4 mt-12">
    <h1 class="font-['Playfair_Display'] font-medium text-4xl mb-8">Blogs</h1>
    <div class="grid gap-8 max-w-2xl">
      {categories.map(category => (
        <article class="border-b border-gray-200 pb-8">
          <h2 class="font-['Playfair_Display'] font-medium text-2xl mb-2">
            <a href={category.url} class="hover:text-gray-600">
              {category.title}
            </a>
          </h2>
          <p class="font-helvetica font-bold text-gray-600 mb-4">{category.description}</p>
          <div class="space-y-4">
            {category.blogs.map(blog => (
              <div class="border-l-4 border-gray-300 pl-4">
                <h3 class="font-['Playfair_Display'] font-medium text-xl">
                  <a 
                    href={blog.externalLink} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="hover:text-gray-600 hover:underline"
                  >
                    {blog.title}
                  </a>
                </h3>
                <p class="text-gray-500 text-sm mb-1">{blog.excerpt}</p>
                <p class="text-gray-400 text-xs">Published on {blog.date}</p>
              </div>
            ))}
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>
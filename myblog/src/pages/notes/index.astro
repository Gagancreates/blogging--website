---
import Layout from '../../layouts/Layout.astro';

const semesters = [
  {
    title: '3rd Semester',
    description: 'Core computer science subjects and foundational knowledge',
    subjects: [
      {
        name: 'Data Structures and Algorithms',
        code: 'only *important* codes + theory',
        units: [
          {
            title: 'Unit 1: Introduction to Data Structures',
            topics: [
              'Arrays and Linked Lists',
              'Stacks and its implementation'
            ],
            
            link: '/notes/3rd_sem/dsa/unit1'
          },
          {
            title: 'Unit 2: Queues and BST',
            topics: [
              'Types of queues and their implementation',
              ' Binary Trees, Binary Search Trees (BST)'
            ],
            link: '/notes/3rd_sem/dsa/unit2'
          },
          {
            title: 'Unit 3: Graphs and Trees',
            topics: [
              'Implementation of BST',
              'Trees, graphs, BFS and DFS',
              
            ],
            link: '/notes/3rd_sem/dsa/unit3'
          },
          {
            title: 'Unit 4: Advanced Data Structures',
            topics: [
              'Hash Tables',
              'Tries and Suffix Trees'
            ],
            link: '/notes/3rd_sem/dsa/unit4'
          }
        ]
      }
    ]
  }
];
---

<Layout title="Notes | Gagan P">
  <main class="container mx-auto px-4 py-8 sm:py-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="font-zt text-5xl sm:text-6xl mb-8 sm:mb-12 text-center text-stone-900 dark:text-stone-100">Notes</h1>

      {semesters.map(semester => (
        <div class="mb-16">
          <h2 class="font-zt text-3xl sm:text-4xl mb-8 text-stone-900 dark:text-stone-100">
            {semester.title}
          </h2>

          {semester.subjects.map(subject => (
            <section class="group p-4 sm:p-6 rounded-2xl border border-stone-200/60 dark:border-stone-700/40 bg-gradient-to-br from-white/80 to-stone-50/60 dark:from-stone-900/60 dark:to-stone-800/40 shadow-sm hover:shadow-lg hover:border-stone-300/70 dark:hover:border-stone-600/50 transition-all duration-500 mb-8">
              <div class="mb-6">
                <h3 class="font-zt text-2xl sm:text-3xl text-stone-900 dark:text-stone-100 mb-2">
                  {subject.name}
                  <span class="font-mono text-sm text-stone-500 dark:text-stone-400 ml-2">({subject.code})</span>
                </h3>
              </div>

              <div class="space-y-6">
                {subject.units.map((unit, index) => (
                  <div class="border-l-4 border-stone-300 dark:border-stone-700 pl-4 sm:pl-6 rounded-r hover:border-stone-400 dark:hover:border-stone-600 transition-colors">
                    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
                      <h4 class="font-space text-lg sm:text-xl font-medium text-stone-900 dark:text-stone-100">
                        {unit.link !== '#' ? (
                          <a
                            href={unit.link}
                            class="hover:text-stone-700 dark:hover:text-stone-300 hover:underline transition-colors"
                          >
                            {unit.title}
                          </a>
                        ) : (
                          <span>{unit.title}</span>
                        )}
                      </h4>
                      {unit.status === 'available' && (
                        <span class="font-mono text-xs px-3 py-1 bg-green-100/80 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full border border-green-200/50 dark:border-green-800/50 self-start">
                          Available
                        </span>
                      )}
                      {unit.status === 'coming-soon' && (
                        <span class="font-mono text-xs px-3 py-1 bg-amber-100/80 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 rounded-full border border-amber-200/50 dark:border-amber-800/50 self-start">
                          Coming Soon
                        </span>
                      )}
                    </div>

                    <ul class="space-y-2">
                      {unit.topics.map(topic => (
                        <li class="font-space text-sm text-stone-600 dark:text-stone-400 flex items-start gap-2">
                          <span class="text-stone-400 dark:text-stone-500 mt-1.5">â€¢</span>
                          <span>{topic}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                ))}
              </div>
            </section>
          ))}
        </div>
      ))}

      <!-- Coming Soon Section for Future Semesters -->
      <div class="mt-16">
        <section class="group p-6 sm:p-8 rounded-2xl border border-stone-200/60 dark:border-stone-700/40 bg-gradient-to-br from-white/80 to-stone-50/60 dark:from-stone-900/60 dark:to-stone-800/40 shadow-sm">
          <div class="text-center">
            <h3 class="font-zt text-2xl sm:text-3xl text-stone-900 dark:text-stone-100 mb-4">
              More Semesters Coming Soon
            </h3>
            <p class="font-space text-stone-600 dark:text-stone-400 text-base sm:text-lg">
              Additional semester notes and subjects will be added as I progress through my coursework.
            </p>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Fade-in animation */
  section {
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Stagger the animations */
  section:nth-child(1) { animation-delay: 0.1s; }
  section:nth-child(2) { animation-delay: 0.2s; }
  section:nth-child(3) { animation-delay: 0.3s; }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: rgba(180, 180, 185, 0.3);
    border-radius: 4px;
  }

  .dark ::-webkit-scrollbar-thumb {
    background: rgba(180, 180, 185, 0.2);
  }

  /* Smooth transitions */
  * {
    transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
  }
</style>

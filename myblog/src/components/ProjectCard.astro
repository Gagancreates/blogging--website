---
interface Props {
  title: string;
  description: string;
  github: string;
  image?: string;
}

const { title, description, github, image } = Astro.props;
---

<article class="project-card group">
  <a href={github} target="_blank" rel="noopener noreferrer" class="block">
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 bg-white dark:bg-black p-4 rounded-xl shadow-md border border-amber-200 dark:border-zinc-800 transition-all duration-300 hover:shadow-lg hover:border-amber-300 dark:hover:border-amber-900">
      {image && (
        <div class="relative w-full sm:w-72 h-48 sm:h-40 flex-shrink-0 rounded-lg overflow-hidden">
          <img
            src={image}
            alt={title}
            class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
        </div>
      )}
      <div class="flex-grow min-w-0">
        <h3 class="font-playfair text-xl font-semibold text-amber-950 dark:text-amber-100 mb-2 group-hover:text-amber-900 dark:group-hover:text-amber-200 transition-colors">
          {title}
        </h3>
        <p class="font-playfair text-gray-600 dark:text-zinc-300 text-sm leading-relaxed">
          {description}
        </p>
        <div class="mt-3 flex items-center text-sm text-amber-900 dark:text-amber-200 group-hover:text-amber-950 dark:group-hover:text-amber-100 transition-colors">
          View Project
          <span class="ml-2 transition-transform duration-300 group-hover:translate-x-1">â†’</span>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .project-card {
    transition: transform 0.3s ease;
  }
  .project-card:hover {
    transform: translateY(-2px);
  }
</style> 
---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head class="bg-light-beige">
    <meta charset="UTF-8" />
    <meta name="description" content="Gagan's personal blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
  html {
    scroll-behavior: smooth;
  }
</style>

  </head>
    <body class="bg-beige">
    <!-- Wrap everything inside the header -->
    <header class="bg-light-beige">
      <nav class="border-b border-gray-200 py-4">
        <div class="container mx-auto px-4">
          <div class="flex justify-between items-center">
            <a href="/" class="text-3xl font-playfair font-bold">DeepLearner</a>
            
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="md:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-6 font-playfair font-medium">
              <a href="/blogs" class="hover:text-gray-600 text-xl">Blogs</a>
              <a href="/project" class="hover:text-gray-600 text-xl">Projects</a>
              <a href="/#research" class="hover:text-gray-600 text-xl">Research</a>
           
            </div>
          </div>

          <!-- Mobile Navigation -->
          <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2">
            <div class="flex flex-col space-y-4 font-playfair font-medium">
              <a href="/blogs" class="hover:text-gray-600 text-xl">Blogs</a>
              <a href="/projects" class="hover:text-gray-600 text-xl">Projects</a>
              <a href="/#research" class="hover:text-gray-600 text-xl">Research</a>
              
            </div>
          </div>
        </div>
      </nav>
    </header>


    <slot />

    <footer class="border-t border-black-200 py-8 mt-20">
      <div class="container mx-auto px-4 text-center">
        <div class="flex justify-center space-x-6 font-inter font-medium">
          <a href="https://github.com/Gagancreates" class="text-gray-600 hover:text-gray-900">GitHub</a>
          <a href="https://x.com/deeeplearner" class="text-gray-600 hover:text-gray-900">Twitter</a>
        </div>
      </div>
    </footer>

    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
  .font-space {
    font-family: 'Space Grotesk', sans-serif;
  }
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  .bg-light-beige { /* Added class for light beige background */
    background-color:rgb(250, 250, 220); /* Light beige color */
  }
</style>